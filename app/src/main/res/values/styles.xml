<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/action_bar_accent</item>
        <item name="android:windowNoTitle">true</item>
        <!--item name="windowActionBar">false</item>-->
        <item name="colorControlNormal">@color/edittext_down_bar</item>
        <item name="colorControlActivated">@color/edittext_down_bar</item>
        <item name="colorControlHighlight">@color/edittext_down_bar</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.Light.ActionBar.Solid</item>
        <item name="android:colorBackground">@color/text_accent</item>
    </style>

    <style name="EditTextCustomHolo" parent="android:Widget.EditText">
        <item name="android:background">@drawable/abc_edit_text_material</item>
        <item name="android:textColor">#ffffff</item>

    </style>

</resources>
