<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kiui.words.activities.PlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/act_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:background="@color/action_bar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:id="@+id/action_bar_cancel"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_action_content_clear"
                    android:layout_marginLeft="11dp"
                    android:layout_centerVertical="true"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main"
                        android:text="main"
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:gravity="right"/>

                    <TextView
                        android:layout_width="0dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text=" > "
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/second"
                        android:textColor="#FFFFFF"
                        android:text="second"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:gravity="left"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:id="@+id/main_word"
                android:text="Sample"
                android:textSize="35dp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ListView
                android:id="@+id/lista_traducciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:paddingTop="6dp"
                android:paddingBottom="4dp"
                android:clipToPadding="false"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/score"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:background="@drawable/score_button"
                android:elevation="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:gravity="center"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/uno"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/dos"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/tres"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/cuatro"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/cinco"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/customprogressbar"
        android:layout_width="match_parent"
        android:layout_height="4dp" />



</RelativeLayout>
