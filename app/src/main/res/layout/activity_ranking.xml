<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kiui.words.activities.RankingActivity"
    android:background="@color/action_bar">

    <RelativeLayout
        android:id="@+id/act_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/action_bar_cancel"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_action_content_clear"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_below="@+id/act_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="38dp"
                android:textColor="@color/text_accent"
                android:text="RANKING"
                android:gravity="center_horizontal"
                android:layout_margin="16dp"/>

            <ListView
                android:layout_below="@+id/ranking"
                android:id="@+id/ranking_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
                android:dividerHeight="1.5dp"
                android:divider="@drawable/list_divider"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
